.carousel.slide#hero{:style => "position: absolute;"}
    .carousel-inner{:style => "z-index: -1"}
        .item{:class => "active"}
            %img#breathing{:src => image_path(@image)}
.jumbotron.main.masthead
    .container
        %h2.front-title= ORG::NAME
        %h4.front-title Large varieties of Minecraft PvP<br>anytime, anywhere
        .row
            .col-md-6.ip
                %p.label.label-default SERVER IP
                %br
                %a.btn.btn-primary.btn-lg.ip
                    %input.input{type: "text", value: "play.stratus.network", onClick: "this.select();", readonly: true}
.bs-docs-social
    .container
        %ul.bs-docs-social-buttons
            %li
                %h5{:style => "font-weight: bold"} Latest Announcements:
                - @topics.each do |topic|
                    %li
                        %a{:href => forem.topic_path(topic),
                           :rel => "tooltip",
                           :title => "Created " + time_ago_in_words(topic.created_at, false, :vague => true) + " ago",
                           :data => {:placement => "bottom"}}= render_topic_title(topic, emoji_size: 16)
